{
    "compilerOptions": {
      "outDir": "dist",     
      "rootDir": "src",             
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }
  