{
    "name": "bruinblog",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "wasm-markdown"
    ],
    "scripts": {
        "dev": "concurrently -k -n client,server \"npm --workspace client run dev\" \"npm --workspace server run dev\"",
        "build": "npm --workspace client run build && npm --workspace server run build",
        "lint": "eslint \"{client,server}/src/**/*.{ts,tsx,js}\"",
        "test": "jest",
        "deploy": "gcloud app deploy --quiet"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/cookie-parser": "^1.4.9",
        "@types/csurf": "^1.11.0",
        "@types/express": "^4.17.23",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.6",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "@vitejs/plugin-react": "^4.5.1",
        "concurrently": "^8",
        "csurf": "^1.11.0",
        "eslint": "^9",
        "jest": "^29.7.0"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "ioredis": "^5.6.1",
        "mongoose": "^8.15.1",
        "react": "^19.1.0",
        "socket.io": "^4.8.1",
        "vite": "^6.3.5",
        "vite-plugin-pwa": "^1.0.0"
    }
}
